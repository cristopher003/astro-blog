---
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
  (a,b)=>b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
  );

console.log(posts);
---

<Layout title="blog">
    <!-- npx astro sync -->
    <div class="max-w-content-size mx-auto w-full">
        <section class="mt-6 w-full">
          <ul class="space-y-8">

          {posts.map((post)=>(
              <li class="border-extra-soft-white text-soft-white hover:bg-soft-light rounded-xl border transition-colors duration-200">
              <div>
                <article>
                  <a>
                    <image src={post.data.heroImage} alt="" width="1020" height="520" class="aspect-[16/5] rounded-t-xl object-cover" />
                    <div class="w-full">
                      <div class="flex flex-col px-12 py-4">
                        <h4 class="text-3xl font-bold">{post.data.title}</h4>
                        <div class="flex gap-2">
                          {post.data.tags.map((tag)=>(
                            <span class="border-extra-soft-white mt-4 self-start rounded border px-2 py-1 text-zinc-400">
                              {tag}
                            </span>
                          ))}
                        </div>
                        <time datetime={post.data.pubDate.toISOString()}
                         class="mt-6 text-sm text-zinc-400">
                          {post.data.pubDate.toLocaleDateString("es-ES",{
                            day:"numeric",
                            month:"long",
                            year:"numeric"
                          })}
                         </time>
                      </div>
                    </div>
                  </a>
                </article>
              </div>
            </li>
          ))}

          </ul>
        </section>
      </div>
      
</Layout>